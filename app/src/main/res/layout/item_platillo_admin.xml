<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_start_color"
    android:padding="5dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgFotoPlatillo"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:orientation="horizontal"
            app:srcCompat="@drawable/outline_account_circle_24" />

        <TextView
            android:id="@+id/lbNombrePLatillo"
            style="@style/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Nombre del platillo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.218"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064" />


        <TextView
            android:id="@+id/lbDescripcionPlatillo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/label"
            android:text="Descripcion" />

        <TextView
            android:id="@+id/lbPrecioPlatillo"
            style="@style/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Precio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.219"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbNombreCliente" />

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnElimianrPlatillo"
                style="@style/styleButton"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:drawableLeft="@drawable/icon_delete"
                android:text="Eliminar"
                android:textColor="@color/black" />

        <Button
            android:id="@+id/btnEditarPlatillo"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Editar"
            style="@style/styleButton"
            android:background="@color/azul"
            android:drawableLeft="@drawable/icon_edit"
            android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>