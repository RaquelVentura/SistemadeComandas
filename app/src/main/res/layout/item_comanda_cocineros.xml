<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="7dp"
    android:padding="10dp"
    android:layout_marginBottom="15dp"
    android:background="@color/cardview_shadow_start_color"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNombreClienteComanda"
        style="@style/encabezado2"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Nombre del cliente"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewFecha"
            style="@style/label"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Fecha: " />

        <TextView
            android:id="@+id/txtFechaComanda"
            style="@style/label"
            android:layout_width="297dp"
            android:layout_height="match_parent"
            android:text="26 de mayo " />
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        style="@style/label"
        android:text="Estado: " />

    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="305dp"
        android:layout_height="22dp"
        android:text="Pendiente" />

</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtviewnota"
        android:layout_width="87dp"
        style="@style/label"
        android:layout_height="wrap_content"
        android:text="Nota: " />

    <TextView
        android:id="@+id/txtNota"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:text="Nota" />
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerPlatosPorClientes"
        android:layout_width="match_parent"
        android:layout_height="132dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCambiarEstado"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:text="Iniciar Preparacion" />

        <ImageButton
            android:id="@+id/btnAdjuntarFotos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/icon_adjuntar" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtMostrarArchivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar archivos"
        android:textColor="@android:color/holo_blue_dark"

        android:paddingTop="5dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAdjuntos"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_marginTop="5dp"
        android:orientation="horizontal" />
</LinearLayout>