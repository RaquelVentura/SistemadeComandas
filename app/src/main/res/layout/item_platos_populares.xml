<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/bg_tarjeta_pastel"
    android:padding="12dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/imagenPlatoPopular"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img_2"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Imagen del platillo" />

    <TextView
        android:id="@+id/lbNombrePlatiloPopular"
        style="@style/encabezado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del plato"
        android:textColor="@color/textPrincipal"
        android:textAlignment="center"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/lbCantidadVendidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="27 vendidos"
        android:textColor="@color/pastelTexto"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/lbCantidadDinero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textColor="@color/pastelTexto"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />

</LinearLayout>
